<div class="Header">

    <h1 class="Heading">Gotta'Do</h1>

    <a href="/task/list" class="Heading"> <button type="button" id="viewButton">View all tasks</button>
    </a>
    <a href="/" class="Heading"> <button type="button" id="homeBtn">Home</button>
    </a>
</div>



<form action="/task/edit/{{task._id}}" method="post" class="addTaskBox">
    <h3>{{viewTitle}}</h3>

    <div class="form-group">
        <label for="taskName" class="Label" id="nameLabel">Task name:</label>
        <input required type="text" id="nameInput" class="inputfield" name="taskEditName" placeholder="task name"
            value="{{task.taskName}}">
    </div> <br>
    <div class="form-group">
        <label for="taskName" class="Label" id="descLabel">Task description:</label>
        {{!-- <input required type="text" id="descInput" class="inputfield" name="taskEditDescription"
            placeholder="task description" value="{{task.taskDescription}}"> --}}
        <textarea required name="taskEditDescription" placeholder="Task description" class="inputfield" id="descInput"
            cols="30" rows="10">{{task.taskDescription}}</textarea>
    </div>
    <button type="submit" href="/task/list" class="button" id="addBtn">Update</button>
    <a href="/task/list"> <button type="button" class="button" id="cancelBtn">Cancel</button></a>
</form>






